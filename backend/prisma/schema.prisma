generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  role        Role     @default(USER)
  chats       Chat[]   @relation("UserChats")
}

model Astrologer {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  specialization String?
  chats       Chat[]   @relation("AstroChats")
}

model Chat {
  id           Int        @id @default(autoincrement())
  message      String
  createdAt    DateTime   @default(now())
  user         User       @relation("UserChats", fields: [userId], references: [id])
  userId       Int
  astrologer   Astrologer @relation("AstroChats", fields: [astroId], references: [id])
  astroId      Int
}

enum Role {
  USER
  ASTROLOGER
  ADMIN
}

